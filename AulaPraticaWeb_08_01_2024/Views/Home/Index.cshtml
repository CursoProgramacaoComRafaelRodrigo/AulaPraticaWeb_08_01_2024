        <select style="font-size:48px">
            @for (int i = 1; i <= 7; i++)
            {
                switch (i)
                {
                    case 1:
                        <option>@DateTime.Now.AddDays(i - 1).ToString("D", idioma)</option>
                        break;
                    case 2:
                        <option>@DateTime.Now.AddDays(i - 1).ToString("D", idioma)</option>
                        break;
                    case 3:
